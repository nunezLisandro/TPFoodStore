{
  "compilerOptions": {

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],

    
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"]
    },

 
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
